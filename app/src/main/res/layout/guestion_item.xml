<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:cardBackgroundColor="@color/white"
                tools:ignore="MissingConstraints">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_question_f2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:clickable="true"


                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/unknown_man_emoji_large"
                    app:civ_border_color="#FF5722"
                    app:civ_border_width="2dp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                    android:textColor="@color/purple_500"
                android:id="@+id/time_question_item"
                android:hint="time"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:paddingStart="4dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="1dp"
                android:textColor="@color/grey"
                android:id="@+id/name_question_item"
                android:text="name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/question_item"
                android:paddingStart="5dp"
                android:layout_marginTop="3dp"
                android:hint="time"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|right"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textSize="20sp"
                    android:textColor="@color/purple_500"
                    android:id="@+id/rep_que_item"
                    android:paddingStart="5dp"
                    android:layout_marginTop="3dp"
                    android:text="Reply"
                    />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>