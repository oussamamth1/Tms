<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contextClickable="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv_Logout"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_logoutttxt"
        android:clickable="true"
        android:text="Logout"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingStart="10dp"
        android:drawablePadding="10dp"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_baseline_power_settings_new_24"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contextClickable="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv_Privec"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_privcyttxt"
        android:text="Privecy"
        android:clickable="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:paddingStart="10dp"
        android:drawablePadding="10dp"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contextClickable="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv_delet"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_delettxt"
        android:text="Delete"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:clickable="true"
        android:paddingStart="10dp"
        android:drawablePadding="10dp"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_baseline_delete_24"/>

</LinearLayout>