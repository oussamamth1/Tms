<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PrivecyActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="100dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AccountStatut"
            android:textSize="25sp"
            android:textColor="@color/purple_700"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_baseline_keyboard_backspace_24"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Privacy"
        android:layout_marginStart="40dp"
        android:textSize="30sp"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Public"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="50dp"
        android:id="@+id/tv_status"/>

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/Spinner"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/read"
            android:layout_gravity="center"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Status"
        android:id="@+id/btn_privecy"
        android:background="@drawable/butoon_f1_backround"
        android:layout_margin="30dp"
        />




</LinearLayout>