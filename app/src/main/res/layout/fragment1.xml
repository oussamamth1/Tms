<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@android:color/white">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_menu_24"
        android:id="@+id/ib_menu_f1"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:layout_gravity="left|center_vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:background="@android:color/transparent"
        android:textStyle="bold"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_edit_24"
        android:id="@+id/ib_edit_f1"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:layout_gravity="right|center_vertical"/>


</androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="50dp"
           android:layout_gravity="center_vertical"
            android:elevation="8dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/iv_f1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
android:src="@drawable/ic_baseline_person"


                android:scaleType="fitCenter" />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_prof_f1"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="3dp"
                android:hint="Name"
                android:paddingStart="10dp"
                android:textAlignment="viewStart"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name_f1"
                android:layout_marginBottom="2dp"
                android:hint="Name"
                android:paddingStart="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="25sp"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
      android:text="Primery details"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/tv_f1_backround_primery"
        android:textStyle="italic"
        android:layout_marginBottom="4dp"
        android:hint="Name"
        android:paddingLeft="80dp"

        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="25sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profession"
            android:textSize="15sp"
            android:layout_marginRight="20dp"
            android:padding="8dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/darker_gray"
            android:drawablePadding="20dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_pro_f1"
        android:text="Profession"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"/>

    <TableRow
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"

        android:background="@color/grey"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emaail"
        android:textSize="15sp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/darker_gray"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_email_f1"
        android:text="Email"
        android:textSize="20sp"

        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"/>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/grey"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="webSite"
        android:textSize="15sp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/darker_gray"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_web_f1"
        android:text="WebSite"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
android:layout_marginBottom="20dp"
        android:background="@color/grey"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:padding="5dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_baseline_supervisor_account_24"
        android:clickable="true"
        android:id="@+id/tv_followers_f1"
        android:layout_gravity="center_horizontal"
        android:text="Followers"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:padding="5dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_baseline_post_add_24"
        android:id="@+id/tv_Post_f1"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:text="Post"/>

</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Story"
        android:textSize="25sp"
        android:id="@+id/tv_addstory_f1"
        android:layout_margin="18dp"
       android:padding="10dp"
        android:background="@drawable/tv_f1_backround"
        android:gravity="center"
        android:textColor="@color/purple_700"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:background="@drawable/butoon_f1_backround"
        android:layout_margin="25dp"
        android:padding="20dp"
        android:textColor="@color/white"
        android:id="@+id/btn_send_f1"/>




</LinearLayout>